<% include ../partials/header %>

	<div class="container">
		<div class="row">
			<form class="well col-md-6 col-md-offset-1" method="POST" action="/campgrounds">
				<h1>Create a campground</h1>
				<div class="form-group">
					<input type="text" class="form-control" name="name" placeholder="Campground name" maxlength="100">
				</div>
				<div class="form-group">
					<input type="text" class="form-control" name="imageurl" placeholder="Image url" maxlength="500">
				</div>
				<div class="form-group">
					<textarea type="text" class="form-control" name="body" cols="30" rows="10" placeholder="Description" maxlength="1000"></textarea>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-success">Create new campground</button>
				</div>
			</form>
		</div>
	</div>

<% include ../partials/footer %>
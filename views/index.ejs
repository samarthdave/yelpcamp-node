<% include ./partials/header %>

	<div class="container">
		<div class="jumbotron">
			<h1>Welcome to YelpCamp!</h1>
			<p>A place to share your favorite campgrounds!</p>
			<% if(!user) { %>
				<a href="/login" class="btn btn-success"><span class="glyphicon glyphicon-tent"></span> Get started</a>
			<% } else { %>
				<a href="/campgrounds/new" class="btn btn-success navbar-btn">New campground</a>
			<% } %>
		</div>
	</div>
	<div class="container">
		<div class="row text-center" id="campgrounds-listing">
			<% for(var i = 0; i < campgrounds.length; i++) { %>
				<div class="col-md-3 col-sm-6">
					<div class="thumbnail">
						<img src="<%= campgrounds[i].imageurl %>" alt="<%= campgrounds[i].name %>">
						<div class="caption">
							<h4><a href="/campgrounds/<%= campgrounds[i].id %>"><%= campgrounds[i].name %></a></h4>
						</div>
					</div>
				</div>
			<% } %>
		</div>
	</div>

<% include ./partials/footer %>